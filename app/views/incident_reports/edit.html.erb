

<div class='footer_buffer'>
    <div class="container">

        <form class="well form-horizontal" action="/incident_reports/<%= @incident_report.id %>" method="post" id="incident_report">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="hidden" name="_method" value="put">
            <fieldset>

                <!-- Form Name -->
                <legend >Incident Report</legend>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label">Address</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-home"></i>
                            </span>
                            <input name="address" placeholder="Address" class="form-control" type="text" value="<%= @incident_report.address %>">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label">City</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-home"></i>
                            </span>
                            <input name="city" placeholder="City" class="form-control" type="text" value="<%= @incident_report.city %>">
                        </div>
                    </div>
                </div>

                <!-- Select Basic -->

                <div class="form-group">
                    <label class="col-md-4 control-label">State</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-list"></i>
                            </span>
                            <select name="state" class="form-control selectpicker" value="<%= @incident_report.state %>">
                                <option value=" ">Please select your state</option>
                                <option>New South Wales</option>
                                <option>Queensland</option>
                                <option>South Australia</option>
                                <option>Tasmania</option>
                                <option>Victoria</option>
                                <option>Western Australia</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label">Post Code</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-home"></i>
                            </span>
                            <input name="postcode" placeholder="Post Code" class="form-control" type="text" value="<%= @incident_report.postcode %>">
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label">Date</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </span>
                            <input name="date" data-date-end-date="0d" placeholder="Date" class="form-control" type="text" value="<%= @incident_report.date %>">
                        </div>
                    </div>
                </div>

                <script type="text/javascript">
                    $(function () {
                        var options = {
                            format: 'yyyy/mm/dd',
                            todayHighlight: true,
                            autoclose: true
                        };
                        $('input[name="date"]').datepicker(options).on('changeDate', function (e) {
                            // Revalidate the date field
                            $('#incident_report').bootstrapValidator('revalidateField', 'date');
                        });
                    });
                </script>

                <!-- Text area -->

                <div class="form-group">
                    <label class="col-md-4 control-label">Incident Description</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                            <textarea class="form-control" name="description" placeholder="Incident Description" value="<%= @incident_report.description %>"></textarea>
                        </div>
                    </div>
                </div>
                <!-- radio checks -->
                <div class="form-group">
                    <label class="col-md-4 control-label full_width">Were the police invovled?</label>
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="police_involved" value="TRUE"/>
                                Yes
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="police_involved" value="FALSE"/>
                                No
                            </label>
                        </div>
                    </div>
                </div>
                <!-- radio checks -->
                <div class="form-group">
                    <label class="col-md-4 control-label full_width">Was an ambulance present?</label>
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="ambulance_involved" value="TRUE"/>
                                Yes
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="ambulance_involved" value="FALSE"/>
                                No
                            </label>
                        </div>
                    </div>
                </div>
                <!-- radio checks -->
                <div class="form-group">
                    <label class="col-md-4 control-label full_width">Do you have private health insurance?</label>
                    <div class="col-md-4">
                        <div class="radio">
                            <label>
                                <input type="radio" name="private_health" value="TRUE"/>
                                Yes
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="private_health" value="FALSE"/>
                                No
                            </label>
                        </div>
                    </div>
                </div>

            <!-- Text area -->

                <div class="form-group">
                    <label class="col-md-4 control-label full_width">Additional Information (Not Required)</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                            <textarea class="form-control" name="additional_information"  value="<%= @incident_report.additional_information %>"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Success message -->
                <div class="alert alert-success" role="alert" id="success_message">Success
                    <i class="glyphicon glyphicon-thumbs-up"></i>
                    Your incident report has been submitted.</div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <form class="" action="/incident_reports/<%= @incident_report.id %>" method="get">
                          <button type="submit" class="btn btn-warning">Submit
                              <span class="glyphicon glyphicon-send"></span>
                          </button>
                        </form>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
    <!-- /.container -->
</div>
<!-- /.footer_buffer -->

<script src="/javascript/createIncidentReport.js"></script>
